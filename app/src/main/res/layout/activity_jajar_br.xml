<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".jajarBR">




    <EditText
        android:id="@+id/alasJARUNG"
        android:layout_width="211dp"
        android:layout_height="39dp"
        android:layout_marginTop="-100dp"
        android:hint="MASUKAN LUAS ALASNYA"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/tinggJARUNG"
        android:layout_width="211dp"
        android:layout_height="39dp"
        android:inputType="number"
        android:hint="MASUKAN TINGGINYA"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/alasJARUNG" />


    <TextView
        android:id="@+id/jarung"
        android:layout_width="211dp"
        android:layout_height="39dp"
        android:layout_marginTop="-250dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tinggJARUNG" />

    <Button
        android:id="@+id/jarung2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginTop="48dp"
        android:text="HITUNG"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tinggJARUNG" />
</androidx.constraintlayout.widget.ConstraintLayout>